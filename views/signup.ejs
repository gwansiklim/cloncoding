<script>
    function signup_post() {
        const email = $('#post_email').val();
        const name = $('#post_name').val();
        const password = $('#post_password').val();
        const birth = $('#post_birth').val();
        const gender = $('#post_gender').val();

        $.ajax({
            type: "POST",
            url: "/api/signup",
            data: {
                email: email,
                name: name,
                password: password,
                birth: birth,
                gender: gender,
            },
            success: function(respone){
                alert ('회원가입이 완료 되었습니다')
            }

        })
    }
</script>
